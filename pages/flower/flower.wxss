/* pages/flower/flower.wxss */
@import '../templace/top/top.wxss';
 .imgs{
  width: 100%;
}
 .imgs swiper image{
  width: 100%;
  height: 200rpx;
}
.youhuibox{
  border-radius: 100rpx;
  background: pink;
  color: red;
  text-align: center;
  width: 80%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 20rpx;
  margin: auto;
  margin-top: 25rpx;
}
.send{
  width: 100%;
  margin-top: 40rpx;
  overflow: hidden;
}
.send .sendonly{
  display: block;
  text-align: center;
  color: red;
  font-size: 35rpx;
}
.send .sending{
  display: block;
  text-align: center;
  color: pink;
  font-size: 20rpx;
  margin-bottom: 10rpx;
}
.send image{
  width: 33%;
  height: 100rpx;
  float: left;
}
.send .sendbox{
  width: 33%;
  height: 100rpx;
  padding-left: 10%;
  background: rgb(255, 255, 255);
  float: left;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.send .sendbox text{
  display: block;
}
.send .sendbox .clickall{
  font-size: 20rpx;
  color: #999;
}
.send .flowerbox{
  display: flex;
  justify-content:space-around;
  margin-top: 20rpx;
}
.send .flowerbox .floweronly{
  width: 15%;
  float: left;
  font-size: 25rpx;
  text-align: center;
}
.send .flowerbox .floweronly image{
  width: 100%;
  height: 113rpx;
}
.send .flowerbox .sendbox1{
  width: 15%;
  float: left;
  font-size: 25rpx;
  text-align: center;
}
.send .flowerbox .sendbox1 .all{
  display: block;
  width: 100%;
  height: 113rpx;
  text-align: center;
  line-height: 113rpx;
  background: rgb(249,249,249);
}
.gejuanbox{
  width: 100%;
  height: 10rpx;
  background: rgb(241, 241, 241);
  margin-top: 20rpx;
}
.product{
  width: 100%;
  overflow: hidden;
}
.product .Popularselling{
  display: block;
  text-align: center;
  margin: 50rpx 0;
}
.product .product_box{
  width: 50%;
  float: left;
  margin-bottom: 50rpx; 
}
.product .product_box image{
  width: 90%;
  display: block;
  margin: auto;
  height:336rpx;
}
.product .product_box .product_name{
  margin-top: 10rpx;
  display: block;
  text-align: center;
}
.product .product_box .product_engname{
  font-size: 25rpx;
  display: block;
  text-align: center;
}
.product .product_box .product_money{
  color: red;
  text-align: center;
}
.product .product_box .product_money .product_money1{
  color:#999;
  font-size: 20rpx;
  text-decoration:line-through;
  margin-left: 5rpx;
}
.more{
  width: 90%;
  box-sizing: border-box;
  border: 1rpx solid rgb(231, 230, 230);
  text-align: center;
  margin: auto;
  line-height: 60rpx;
  margin-top: 20rpx;
  margin-bottom: 80rpx;
}