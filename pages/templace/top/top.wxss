/* pages/templace/top/top.wxss */
.top{
  width: 100%;
  height: 70rpx;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  margin-bottom: 20rpx;
}
 .top .currentlocation{
 width: 150rpx;
 height: 61rpx;
 background: rgb(236, 236, 236);
 display: inline-block;
 margin-right: 20rpx;
 text-align: center;
 line-height: 61rpx;
 color: #999999;
 font-size: 25rpx;
 border-radius: 5rpx;
}

 .top .search{

  width: 100%;
  height: 60rpx;
  border: 1rpx solid rgb(190, 190, 190);
  display: flex;
  border-radius: 5rpx;
  box-sizing: border-box;
}
 .top icon{
  display: inline-block;
  line-height:83rpx;
  margin: 0 10rpx;
}
 .top input{
  display: inline-block;
  width: 100%;
  height: 100%;
  line-height: 60rpx;
  font-size: 25rpx;
  color: #666;
}
.top button{
  width: 120rpx;
  height: 60rpx;
  border: 1rpx solid red;
  background: #fff;
  font-size: 25rpx;
  color: red;
  margin-left: 10rpx;
  padding: 0;
}